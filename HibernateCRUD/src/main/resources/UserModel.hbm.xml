<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<class name="com.savan.model.UserModel" table="userRegister" >
	
		<meta attribute="class-description">
			This Class Contains Class Description
		</meta>
		
		<id name="id" type="integer" column="id" >
			<generator class="increment"></generator>
		</id>
		
		<property name="firstname" type="string" column="first_name" ></property>
		<property name="lastname" type="string" column="last_name" ></property>
	
	</class>

</hibernate-mapping>